{
  "require": {
    "afragen/git-updater": "^9 || ^10",
    "composer/installers": "^1"
  },
  "minimum-stability": "dev",
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/afragen/git-updater"
    }
  ],
  "extra": {
    "installer-paths": {
      "../../../wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "../../../wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    }
  }
}